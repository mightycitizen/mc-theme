<div class="bg-white py-6 px-6 shadow rounded-md {{ class | default }}" {% if closable | default %}data-closable{% endif %}>
  <div class="flex gap-6 justify-center flex-wrap md:flex-nowrap items-center">
    <div class="order-1 w-full md:w-auto">
      {% if icon %}
      <span class="bg-primary-50 inline-block w-[81px] h-[81px] rounded-full flex items-center justify-center m-auto">
        <span class="ph ph-[{{ icon }}] text-primary-500 text-5xl"></span>
      </span>
      {% endif %}
      {% if image %}
        <img class="m-auto" src="{{ image.src }}" alt="{{ image.alt }}"/>
      {% endif %}
    </div>
    <div class="basis-full md:basis-auto order-3 md:order-1">
      <span class="text-lg font-bold text-black">{{ title }}</span>
      {% if text | default %}
        <span class="block text-neutrals-800 text-lg">{{ text }}</span>
      {% endif %}
    </div>
    {% if closable | default %}
      <div class="order-2 md:order-3">
        <button class="{% if closable_text | default is empty %}close-button{% else %}button{% endif %}" aria-label="Dismiss alert" type="button" data-close>
          <span class="text-3xl" aria-hidden="true">{% if closable_text | default %}{{ closable_text }}{% else %}&times;{% endif %}</span>
        </button>
      </div>
    {% endif %}
  </div>
</div>
