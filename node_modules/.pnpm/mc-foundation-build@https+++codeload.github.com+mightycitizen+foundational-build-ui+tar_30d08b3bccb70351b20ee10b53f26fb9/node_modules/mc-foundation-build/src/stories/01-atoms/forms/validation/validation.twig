<form action="/" >
  {% include  '@atoms/forms/input/input.twig' with {
      label: "Text",
      name: "text",
      id: "id_3",
      placeholder: "Prompt Text",
      required: true
    } %}
  {% include  '@atoms/forms/textarea/textarea.twig' with {
      label: "Textarea",
      name: "textarea",
      id: "id_2",
      placeholder: "Prompt Text",
      required: true
    } %}

  {% set select_options = {
    required: true,
    label: "Select",
    id: "select_validation",
    field_name: "select",
    options: [
      {
        label: "Select A",
        value: 0
      },
      {
        label: "Select B",
        value: 1
      },
      {
        label: "Select C",
        value: 2
      }
    ]
  } %}
  {% include  '@atoms/forms/select/select.twig' with select_options
  %}

  {% set select_options = select_options | merge({ label: "Select (Filterable)" }) %}


  {% include  '@atoms/forms/select/filterable.twig' with select_options
  only
  %}
  {% include  '@atoms/forms/radio-group/radio-group.twig' with {
    required: true,
    label: "Radio",
    id: "radio_validation",
    name: "radio",
    placeholder: 'Select an option',
    options: [
      {
        label: "Radio A",
        value: 0
      },
      {
        label: "Radio B",
        value: 1
      },
      {
        label: "Radio C",
        value: 2
      }
    ]
  }
  %}


  {% include  '@atoms/forms/checkbox-group/checkbox-group.twig' with {
      label: "Checkbox",
      id: "checkbox_validation",
      required: true,
      name: "checkbox",
      options: [
        {
          label: "Checkbox A",
          value: 0
        },
        {
          label: "Checkbox B",
          value: 1
        },
        {
          label: "Checkbox C",
          value: 2
        }
      ]
    }

    %}
  <ul class="list-none flex gap-4--stacked">
    <li><button type="submit" class="button">Submit</button></li>
    <li><button type="submit" class="button ml-4" disabled>Disabled button</button></li>
  </ul>



</form>
