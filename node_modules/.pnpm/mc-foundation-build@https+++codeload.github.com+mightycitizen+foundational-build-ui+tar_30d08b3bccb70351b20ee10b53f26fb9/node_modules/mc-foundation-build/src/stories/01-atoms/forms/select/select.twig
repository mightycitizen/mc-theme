{% embed '@atoms/forms/label/label.twig' %}
  {% block field %}
      <select {% if autocomplete | default %}autocomplete="{{ autocomplete }}"{% endif %} id="{{ id | default }}" {% if required | default %}required{% endif %} {% if disabled | default %}disabled{% endif %} class="{{ input_class | default }}" name="{{ name }}">
        {% if placeholder | default %}
          <option value="">{{ placeholder }}</option>
        {% endif %}
        {% for option in options %}
          <option {% if value | default == option.value %}selected{% endif %} value="{{ option.value }}">{{ option.label }}</option>
        {% endfor %}
      </select>    
  {% endblock %}
{% endembed %}
