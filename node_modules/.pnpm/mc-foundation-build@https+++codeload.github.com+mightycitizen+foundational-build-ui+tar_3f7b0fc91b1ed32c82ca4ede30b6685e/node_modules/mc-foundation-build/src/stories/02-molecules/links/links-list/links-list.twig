<ul class="list-none">
  {% if heading | default is not empty %}
    <h2>{{ heading }}</h2>
  {% endif %}
  {% for link in links %}
    <li>
      {% if link | default is not empty %}
        <a class="block text-2xl text-black border-b-[1px] border-b-black px-3 py-3.5 no-underline hover:bg-primary-500 hover:text-white" href="{{ link.url }}">
          {{ link.text }}
          <span class="float-right {{ icon_classes|default('ph ph-[caret-right]') }}"></span> </a>
      {% endif %}
    </li>
  {% endfor %}
</ul>
