<div class="card card--horizontal {% if no_outline is empty | default %}md:shadow-lg bg-white {% endif %}{{ modifier | default }} {% if clickCard | default %}card--click{% endif %}" data-scroll-show>

  <div {% if image_position | default != 'flush' %}class="card_section {% if no_outline is empty | default %}md:py-8 md:px-8{% endif %}"{% endif %}>
    <div class="{% if image_position | default == 'flush' %}grid grid-cols-12 gap-y-4 lg:gap-x-8 items-center{% elseif var == 'short' %}flex gap-x-4{% else %}grid grid-cols-12 gap-y-4 gap-x-5{% endif %} ">
      {% if image | default %}
        <div class="{% if var == 'short' %}shrink-0{% else %}col-span-12 md:col-span-5 lg:col-span-5{% endif%} {% if image.alignment | default and image.alignment == 'right' %}md:order-2{% endif %}">
          <div class="card_image {% if var != 'short' %}image-size--landscapeCroppedMedium{% endif %}">
            <img {% if lazyload_attr | default %}{{ lazyload_attr }}="{{ image.src }}"{% else %}src="{{ image.src }}" loading="lazy"{% endif %}  alt="{{ image.alt }}" class="{% if var != 'short' %}w-full{% endif %}">
          </div>
        </div>
      {% endif %}
      <div class="
        {% if image | default %}
          {% if var == 'short' %}{% else %}col-span-12 lg:col-span-7{% endif%}
          {% if image.alignment  | default and image.alignment == 'right' %}md:order-1{% endif %}
        {% else %}
          col-span-12
        {% endif %}">
        {% if image_position | default == 'flush' %}
          <div class="card_section py-6 px-8 flex justify-center flex-col h-full flex">
        {% endif %}
              {% include '@molecules/cards/card/_card-content.twig' %}
        {% if image_position | default == 'flush' %}
          </div>

        {% endif %}

      </div>
    </div>
  </div>
</div>
