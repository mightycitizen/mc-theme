
  <fieldset class="options {% if horizontal | default %}my-4 lg:my-0{% else%}my-4{% endif%} collapsible"
    x-data="{ expanded: {%if closed |default %}false{% else %}true{% endif %}}">
    <legend @click="expanded = ! expanded">
      {{ label }} {% if required | default %}<span class="form-required">*</span>{% endif %}
      <span class="icon-caret-down-fill text-lg float-right" :class="{ 'rotate-180': expanded }"></span>
    </legend>
    <div class="collapsible-group" x-show="expanded" x-collapse>
      {% if options is iterable %}
        <ul class="checkbox-group list-none">
          {% for option in options %}
            <li>{% include '@atoms/forms/checkbox/checkbox.twig' with {
            field_id: id,
            value: option.value,
            name: name,
            label: option.label
            } only %}</li>
          {% endfor %}
        </ul>
      {% else %}
        {{ options }}
      {% endif %}
    </div>
    {# {% if required %}
      <span class="form-error">{{ label }} is required</span>
    {% endif %} #}
  </fieldset>
