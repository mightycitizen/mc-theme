{% extends '@wrappers/default.twig' %}
{% block top %}
  {% include '@organisms/hero/hero.twig' with {
    image: {
      src: "/images/hero-secondary.jpg",
      alt: "University view"
    },
    heading: "University Alerts",
    summary: "[WYSIWYG - text + links allowed] Lorem ipsum odor amet, consectetuer adipiscing elit. Nec urna commodo aliquam parturient ante curabitur. Accumsan morbi et non facilisi iaculis, tempus curabitur bibendum.Â ",
    hero_button: {
      text: "Primary Button",
      url: "#"
    },
    readmore_link: {
      text: "Optional Link",
      url: "#"
    }
  } %}
{% endblock %}
{% block main %}
  {% if narrow_modules | default | length > 0 %}
    {% set content %}
      <div class="anchor-nav bg-primary-50 px-6 py-5 mb-5">
        <p class="uppercase text-primary-900 font-bold text-sm mb-5">Table of Contents (Editable title)</p>
        <ul class="list-none font-semibold space-y-2">
          {% for item in anchor_nav %}
            <li>
              <a class="" href="{{ item.url }}">{{ item.text }}</a>
            </li>
          {% endfor %}
        </ul>
      </div>
      {% for module in narrow_modules %}
        {% if module.module_type == 'wysiwyg' %}
          {{ module.wysiwyg }}
        {% elseif module.module_type == 'accordion' %}
          {% include '@components/modules/accordion/accordion-module.twig' with module only %}
        {% endif %}
      {% endfor %}
    {% endset %}
    {% if sidebar_modules | default | length > 0 %}
      {% set sidebar %}
        {% include '@molecules/navigation/local-nav/local-nav.twig' with local_nav %}
        {% for module in sidebar_modules %}
          {% if module.module_type == 'accordion' %}
            {% include '@components/modules/accordion/accordion-module.twig' with module only %}
          {% endif %}
        {% endfor %}
      {% endset %}
    {% endif %}
    {% embed '@organisms/section/section-embed.twig' with {
      padding: 'tight',
    } %}
      {% block section_content %}
        {% include '@base/layout/content-with-sidebar.twig' %}
      {% endblock %}
    {% endembed %}
  {% endif %}

  {% include '@molecules/navigation/anchor/anchor.twig' %}
  {% for module in modules %}
    {% if module.module_type == 'active_alerts' %}
      {% include '@components/modules/alerts/active-alerts.twig' with module only %}
    {% elseif module.module_type == 'alerts_list' %}
      {% include '@components/modules/alerts/alerts-list.twig' with module only %}
    {% endif %}

  {% endfor %}


{% endblock %}
