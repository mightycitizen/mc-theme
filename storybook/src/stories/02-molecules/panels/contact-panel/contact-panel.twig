{#<div class="card card--horizontal shadow-md">#}
<div>
  <div class="bg-neutrals-50 px-12 lg:px-[74px] py-14">
    <div class="container">
    <div class="grid grid-cols-12 gap-x-2 items-center gap-y-4">
      <div class="col-span-12 lg:col-span-3 lg:border-r-[1px] lg:border-r-black md:pr-4 lg:-mr-[40px] mb-8 lg:mb-0">
        <h2 class="h3 lg:text-[32px]">{{ heading }}</h2>
        <h3 class="text-xl">{{ subheading }}</h3>
        {% if description is not empty %}
          <p class="mb-3 lg:text-lg">{{ description }}</p>
        {% endif %}
        {% if link | default %}
          {% include '@atoms/links/read-more/read-more.twig' with link %}
        {% endif %}
      </div>
      {% if items | length %}
        <div class="col-span-12 lg:col-span-9 lg:pl-[70px]">
          <div>
            {% include '@molecules/lists/label-value/label-value.twig' with {
            "listing_class": 'items-start mb-0',
            "items": items
          } %}
          </div>
        </div>
      {% endif %}
    </div>
  </div>
  </div>
</div>
