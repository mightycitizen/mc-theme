<div class="grid grid-cols-12  gap-6 md:gap-y-9 align-{{ alignment | default('center') }}" data-equalizer data-equalize-on="medium">
  {% for card in cards %}
    {% set card = card | merge({lazyload_class: 'data-splide-lazy', equalize: true}) %}
    <div class="col-span-12{% if single_column is empty %} md:col-span-6{% endif %}">
      {% include "@molecules/cards/card/card-horizontal.twig" with card only %}
    </div>
  {% endfor %}
</div>
