              <ul class="list-none space-y-6 md:space-y-11 border-l-primary-400">
                {% for item in contact_information %}
                  <li class="flex gap-x-2 text-primary-500 items-center">
                    <span class="ph ph-[{{ item.icon }}] text-xl"></span> <a class="font-bold" href="{{ item.url }}">{{ item.text }}</a>
