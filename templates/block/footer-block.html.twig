{#graphql
fragment MenuItem on MenuItem {
  text:title
  url
  internal
  children {
    text:title
    url
    internal
  }
}

query Footer {
  footer: menu(name: FOOTER) {
    items {
      ...MenuItem
    }
  }
  footer_utility: menu(name: FOOTER_UTILITY) {
    items {
      ...MenuItem
    }
  }
}
#}

